{% extends 'layouts/base.twig' %}

{% block css %}
    <link href="public/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Categorias de Serviços</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="">Painel de controle</a>
                </li>
                <li>
                    <a href="{{ path_for('services') }}">Serviços</a>
                </li>
                <li class="active">
                    <strong>Categorias</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Lista das categorias de serviços</h5>
                        <div class="ibox-tools">
                            <a href="{{  path_for('services.categories') ~ '/add' }}" class="btn btn-primary btn-xs">Criar Novo</a>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-example" >
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Categoria</th>
                                    <th>Valor Padrão</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories  %}
                                <tr class="gradeX">
                                    <td>{{ category.id }}</td>
                                    <td>{{ category.category }}</td>
                                    <td class="center">R$ {{ category.value | number_format(2, ',', '.') }}</td>
                                    <td class="center">
                                        {% if category.active == 1 %}
                                            <small class="label label-primary"><i class="fa fa-check"></i> Ativo</small>
                                        {% else %}
                                            <small class="label label-danger"><i class="fa fa-unlock-alt"></i> Desativado</small>
                                        {% endif %}
                                    </td>
                                    <td class="center">
                                        <a href="{{ path_for('services.categories') ~ '/edit/' ~ category.id }}" data-toggle="tooltip" title="editar"><i class="fa fa-edit"></i></a>
                                        <a href="{{ path_for('services.categories') ~ '/delete/' ~ category.id }}" data-toggle="tooltip" title="deletar"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>
        </div>


    </div>
{% endblock %}

{% block js %}

    <script src="public/js/plugins/dataTables/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            //
        });
    </script>
{% endblock %}